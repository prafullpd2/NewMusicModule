<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/playlist_selection"
    android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/playlist_albumart"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/song_title_tv"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/playlist_albumart"
                android:layout_toEndOf="@+id/playlist_albumart" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/song_album_tv"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_below="@+id/song_title_tv"
                android:layout_toRightOf="@+id/playlist_albumart"
                android:layout_toEndOf="@+id/playlist_albumart" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/song_artist_tv"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_below="@+id/song_album_tv"
                android:layout_toRightOf="@+id/playlist_albumart"
                android:layout_toEndOf="@+id/playlist_albumart" />

</RelativeLayout>